<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.TaskTableViewController">
   <children>
      <TableView fx:id="tableView" layoutX="14.0" layoutY="34.0" prefHeight="184.0" prefWidth="573.0">
        <columns>
            <TableColumn fx:id="projectColumn" prefWidth="90.0" text="Project*" />
            <TableColumn fx:id="subjectColumn" onEditCommit="#changeSubjectCellEvent" prefWidth="144.0" text="Subject*" />
          <TableColumn fx:id="statusColumn" prefWidth="71.0" text="Status" />
            <TableColumn fx:id="priorityColumn" prefWidth="68.0" text="Priority" />
          <TableColumn fx:id="assigneeColumn" prefWidth="105.0" text="Assignee" />
            <TableColumn fx:id="addedByColumn" prefWidth="94.0" text="Added by" />
        </columns>
      </TableView>
      <ComboBox fx:id="projectComboBox" layoutX="14.0" layoutY="226.0" prefHeight="25.0" prefWidth="84.0" promptText="Project" />
      <TextField fx:id="subjectTextField" layoutX="108.0" layoutY="226.0" prefHeight="25.0" prefWidth="145.0" promptText="Subject" />
      <ComboBox fx:id="priorityComboBox" layoutX="334.0" layoutY="226.0" prefHeight="25.0" prefWidth="51.0" promptText="Priority" />
      <ComboBox fx:id="assigneeComboBox" layoutX="392.0" layoutY="226.0" prefHeight="25.0" prefWidth="95.0" promptText="Assignee" />
      <HBox layoutX="13.0" layoutY="267.0" prefHeight="51.0" prefWidth="335.0" spacing="20.0">
         <children>
            <Button fx:id="addTaskButton" mnemonicParsing="false" onAction="#handleAddNewTaskButtonAction" text="Add task" />
            <Button fx:id="getMoreDetailsButton" mnemonicParsing="false" onAction="#handleChangeSceneToDetailedTaskViewButtonAction" text="Get more details" />
            <Button fx:id="deleteTaskButton" mnemonicParsing="false" onAction="#handleDeleteTaskButtonAction" text="Delete" textFill="RED" />
         </children>
      </HBox>
      <Label fx:id="authorizedUserLabel" layoutX="28.0" layoutY="328.0" />
      <BorderPane layoutX="-3.0" layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleLogOutMenuAction" text="Log out" />
                    <MenuItem mnemonicParsing="false" onAction="#handleCloseMenuAction" text="Close" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
